<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to investment_categories_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-700 font-medium" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t('actions.back_to_categories') %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-12 text-white">
      <h1 class="text-4xl font-bold mb-2"><%= t('pages.simulation.new_title') %></h1>
      <p class="text-lg text-indigo-100"><%= t('pages.simulation.new_subtitle') %></p>
    </div>

    <div class="p-8">
      <%= form_with model: @simulation, local: true, class: "space-y-8" do |f| %>
        <% if @simulation.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-red-600 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div>
                <h3 class="text-red-800 font-semibold mb-2"><%= pluralize(@simulation.errors.count, t('plurals.error.one'), t('plurals.error.other')) %> <%= t('simulation.form.errors_prevented_save') %></h3>
                <ul class="list-disc list-inside text-red-700 space-y-1">
                  <% @simulation.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <label for="simulation_investment_type_id" class="block text-sm font-bold text-gray-900 mb-2">
              <%= t('labels.select_investment_type') %>
              <span class="text-red-500">*</span>
            </label>
            <p class="text-sm text-gray-600 mb-3"><%= t('simulation.form.investment_type_help') %></p>

            <div class="space-y-2">
              <% @investment_types.group_by(&:investment_category).each do |category, types| %>
                <div class="border border-gray-200 rounded-lg overflow-hidden">
                  <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
                    <h3 class="font-semibold text-gray-900"><%= category.name %></h3>
                  </div>
                  <div class="p-3 space-y-2">
                    <% types.each do |investment_type| %>
                      <label class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 cursor-pointer transition duration-200 border border-transparent hover:border-indigo-300">
                        <div class="flex items-center flex-1">
                          <%= f.radio_button :investment_type_id, investment_type.id, class: "w-4 h-4 text-indigo-600 border-gray-300 focus:ring-indigo-500" %>
                          <div class="ml-3">
                            <span class="block font-medium text-gray-900"><%= investment_type.name %></span>
                            <% if investment_type.ticker_symbol.present? %>
                              <span class="text-sm text-gray-500"><%= t('labels.ticker') %>: <%= investment_type.ticker_symbol %></span>
                            <% end %>
                          </div>
                        </div>
                        <% if investment_type.base_price.present? %>
                          <span class="font-bold text-indigo-600">$<%= number_with_delimiter(investment_type.base_price, delimiter: ',') %></span>
                        <% end %>
                      </label>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="border-t border-gray-200 pt-6">
            <label for="simulation_initial_capital" class="block text-sm font-bold text-gray-900 mb-2">
              <%= t('labels.initial_capital') %>
              <span class="text-red-500">*</span>
            </label>
            <p class="text-sm text-gray-600 mb-3"><%= t('simulation.form.initial_capital_help') %></p>

            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 text-lg">$</span>
              </div>
              <%= f.number_field :initial_capital,
                  class: "block w-full pl-8 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-lg",
                  placeholder: "10000",
                  step: "0.01",
                  min: "0.01" %>
            </div>

            <div class="mt-3 grid grid-cols-2 md:grid-cols-4 gap-2">
              <button type="button" onclick="document.getElementById('simulation_initial_capital').value = 5000" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition duration-200">
                $5,000
              </button>
              <button type="button" onclick="document.getElementById('simulation_initial_capital').value = 10000" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition duration-200">
                $10,000
              </button>
              <button type="button" onclick="document.getElementById('simulation_initial_capital').value = 25000" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition duration-200">
                $25,000
              </button>
              <button type="button" onclick="document.getElementById('simulation_initial_capital').value = 50000" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition duration-200">
                $50,000
              </button>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-200 pt-6">
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div class="text-sm text-blue-800">
                <p class="font-semibold mb-1"><%= t('simulation.how_it_works.title') %></p>
                <ul class="list-disc list-inside space-y-1 text-blue-700">
                  <li><%= t('simulation.how_it_works.start_with_capital') %></li>
                  <li><%= t('simulation.how_it_works.buy_and_sell') %></li>
                  <li><%= t('simulation.how_it_works.advance_time') %></li>
                  <li><%= t('simulation.how_it_works.track_performance') %></li>
                </ul>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <%= link_to t('actions.cancel'), investment_categories_path, class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50 transition duration-200" %>
            <%= f.submit t('actions.create_simulation'), class: "px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-semibold transition duration-200 inline-flex items-center" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6 bg-white rounded-lg shadow-md p-6">
    <h2 class="text-lg font-bold text-gray-900 mb-3"><%= t('messages.need_help_choosing') %></h2>
    <p class="text-gray-600 mb-4">
      <%= t('messages.explore_before_starting') %>
    </p>
    <%= link_to t('actions.view_categories'), investment_categories_path, class: "text-indigo-600 hover:text-indigo-700 font-medium inline-flex items-center" %>
  </div>
</div>
