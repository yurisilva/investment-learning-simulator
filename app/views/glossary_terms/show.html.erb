<div class="max-w-6xl mx-auto">
  <div class="mb-6">
    <%= link_to glossary_terms_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-700 font-medium" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t('actions.back') %> to <%= t('nav.glossary') %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-12 text-white">
      <div class="flex items-center mb-3">
        <div class="w-12 h-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center mr-4">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
        </div>
        <h1 class="text-4xl font-bold"><%= @glossary_term.translated_term %></h1>
      </div>
    </div>

    <div class="p-8">
      <div class="bg-gray-50 rounded-lg p-6 mb-8">
        <div class="flex items-start">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0 mt-1">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h2 class="text-xl font-bold text-gray-900 mb-3"><%= t('labels.definition') %></h2>
            <p class="text-gray-700 leading-relaxed text-lg"><%= @glossary_term.translated_definition %></p>
          </div>
        </div>
      </div>

      <% if @glossary_term.related_categories.present? && @glossary_term.related_categories.any? %>
        <div class="bg-white border border-gray-200 rounded-lg p-6 mb-8">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <h2 class="text-xl font-bold text-gray-900"><%= t('labels.related_categories') %></h2>
          </div>
          <div class="flex flex-wrap gap-2">
            <% @glossary_term.related_categories.each do |category| %>
              <%= link_to glossary_terms_path(category: category), class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-indigo-100 text-indigo-800 hover:bg-indigo-200 transition duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                </svg>
                <%= category %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @glossary_term.example_scenario.present? %>
        <div class="bg-gradient-to-br from-green-50 to-blue-50 border-2 border-green-200 rounded-lg p-8 mb-8">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900"><%= t('labels.visual_example') %></h2>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6 overflow-x-auto">
            <div class="prose prose-sm max-w-none">
              <%= sanitize t("glossary_examples.#{@glossary_term.term.parameterize.underscore}", default: @glossary_term.example_scenario), tags: %w[div h4 h5 p ul li table thead tbody tr th td span strong svg path], attributes: %w[class colspan rowspan stroke-linecap stroke-linejoin stroke-width viewBox fill stroke d] %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-indigo-50 border border-indigo-200 rounded-lg p-6 mt-8">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center">
            <svg class="w-8 h-8 text-indigo-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            <div>
              <h3 class="text-lg font-bold text-gray-900"><%= t('labels.explore_more_terms') %></h3>
              <p class="text-gray-600 text-sm"><%= t('labels.continue_building_knowledge') %></p>
            </div>
          </div>
          <div class="flex gap-3">
            <%= link_to glossary_terms_path, class: "bg-white hover:bg-gray-50 text-indigo-600 px-5 py-3 rounded-lg font-semibold transition duration-200 inline-flex items-center border-2 border-indigo-600" do %>
              <%= t('actions.view_all_terms') %>
            <% end %>
            <%= link_to investment_categories_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-3 rounded-lg font-semibold transition duration-200 inline-flex items-center" do %>
              <%= t('labels.browse_categories') %>
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
