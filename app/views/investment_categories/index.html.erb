<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= t('pages.categories.title') %></h1>
    <p class="text-lg text-gray-600"><%= t('pages.categories.subtitle') %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @investment_categories.each do |category| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900"><%= category.translated_name %></h2>
          </div>

          <% if category.description.present? %>
            <p class="text-gray-600 mb-4 line-clamp-3"><%= category.translated_description %></p>
          <% end %>

          <div class="flex items-center justify-between pt-4 border-t border-gray-200">
            <div class="flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
              <%= pluralize(category.investment_types.count, t('plurals.type.one'), t('plurals.type.other')) %>
            </div>
            <%= link_to t('actions.learn_more'), investment_category_path(category), class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition duration-200" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @investment_categories.empty? %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="text-xl font-semibold text-gray-700 mb-2"><%= t('messages.no_categories') %></h3>
      <p class="text-gray-500"><%= t('messages.no_categories_detail') %></p>
    </div>
  <% end %>
</div>
